{% extends "PsaAdminBundle::layout.html.twig" %}

{% block main %}
<h1>Document list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Path</th>
            <th>Description</th>
            <th>Date_upload</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('document_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.path }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.dateupload %}{{ entity.dateupload|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('document_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('document_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('document_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}