{% extends "PsaAdminBundle::layout.html.twig" %}

{% block main %}

<div class="content-list-article">
<h1 class="titre-list">Gallery list</h1>

<table class="records_list">
    <thead>
        <tr>
            <!--
            <th>Id</th>
            <th>Album_id</th>
            -->
            <th>Src</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr {%if loop.index is divisibleby(2)%} class="vert-fonc" {%else%}class="vert-clair"{%endif%} >
            <!--
            <td><a href="{{ path('gallery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.albumid }}</td>
            -->
             <td><img src="{{ asset(entity.src) }}" width="100px"/></td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('gallery_delete', { 'id': entity.id }) }}">Supprimer</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('gallery_new') }}">
            Ajouter Image Gallery
        </a>
    </li>
</ul>
</div>
{% endblock %}