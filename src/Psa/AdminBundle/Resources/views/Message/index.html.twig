{% extends "PsaAdminBundle::layout.html.twig" %}

{% block main %}
<h1>Message list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Datemessage</th>
            <th>Fromemail</th>
            <th>Toemail</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.dateMessage %}{{ entity.dateMessage|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.fromEmail }}</td>
            <td>{{ entity.toEmail }}</td>
            <td>{{ entity.contenu }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('message_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('message_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('message_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}