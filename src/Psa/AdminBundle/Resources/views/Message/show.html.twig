{% extends "PsaAdminBundle::layout.html.twig" %}

{% block main %}


    <div id="central" class="mains">
                
                <h2>Message</h2>

                <table style="width:820 ">
                    <tbody>
                        {#
                        <tr class="element">
                            <th>Id</th>
                            <td class="input"><input class="message" type="text" style="readonly:'readonly'" value="{{ entity.id }}"/></td>
                        </tr
                        #}
                        <tr class="element">
                            <th class="th">Message de</th>
                            <td class="input"><input class="message" type="text" readonly="readonly" value="{{ entity.fromEmail }}"/></td>
                        </tr>
                        <tr class="element">
                            <th class="th">A</th>
                            <td class="input"><input class="message" type="text" readonly="readonly" value="{{ entity.toEmail }}"/></td>
                        </tr>
                        <tr class="element">
                            <th class="th">Du</th>
                            <td class="input"><input class="message" type="text" readonly="readonly" value="{{ entity.dateMessage|date('Y-m-d H:i:s') }}"/></td>
                        </tr>
                        <tr class="element">
                            <th class="th">Contenu</th>
                            <td class="input"><textarea class="message textarea" readonly="readonly" >{{ entity.contenu }}</textarea></td>
                        </tr>
                    </tbody>
                </table>
                <div class="element">
                  <div class="clearfix"></div>
                  <a href="{{ path('message') }}" title="Revenir à la liste">&lt;&lt; Revenir à la liste</a>
                        <form action="{{ path('message_delete', { 'id': entity.id }) }}" method="post">
                            {{ form_widget(delete_form) }}
                            <button type="submit">Delete</button>
                        </form>
                  <div class="loading"></div>
                </div>

    </div>
{% endblock %}